   <obj type="script/script2" sha="1478c410b77725959c034de4a2456dd1198e9080" name="script2_1" x="20" y="154">
      <params/>
      <attribs>
         <text attributeName="script">
            <sText><![CDATA[uint8_t *txbuf;
uint8_t *rxbuf;

void setup(void) {
	// need DMA-able memory for SPI
	static uint8_t _txbuf[32] __attribute__ ((section (".sram2")));
	static uint8_t _rxbuf[32] __attribute__ ((section (".sram2")));
	txbuf = _txbuf;
	rxbuf = _rxbuf;
	
	txbuf[0] = 0x00;
	txbuf[1] = 0x30;
	txbuf[2] = 0x01;
	spiSelect(&SPID1);
	spiSend(&SPID1,3,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(2);

	txbuf[0] = 0x00;
	txbuf[1] = 0x19;
	txbuf[2] = 0x00;
	spiSelect(&SPID1);
	spiSend(&SPID1,3,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(3);

	txbuf[0] = 0x00;
	txbuf[1] = 0x30;
	txbuf[2] = 0x08;
	spiSelect(&SPID1);
	spiSend(&SPID1,3,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(1);

	txbuf[0] = 0x01;
	txbuf[1] = 0x90;
	txbuf[2] = 0x00;
	txbuf[3] = 0x41;
	spiSelect(&SPID1);
	spiSend(&SPID1,4,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(1);

	txbuf[0] = 0x01;
	txbuf[1] = 0x1A;
	txbuf[2] = 0x40;
	txbuf[3] = 0x00;
	spiSelect(&SPID1);
	spiSend(&SPID1,4,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(1);

	txbuf[0] = 0x00;
	txbuf[1] = 0x33;
	txbuf[2] = 0x33;
	spiSelect(&SPID1);
	spiSend(&SPID1,3,txbuf);
	spiUnselect(&SPID1);
	chThdSleepMilliseconds(1);
}

void loop(void){
	txbuf[0] = 0x81;
	txbuf[1] = 0x37;
	spiSelect(&SPID1);
	spiSend(&SPID1,2,txbuf);
	spiReceive(&SPID1,18,&rxbuf[0]);
	spiUnselect(&SPID1);
	out1 = (rxbuf[0] + ((rxbuf[2] & 0x30) >> 4 << 8))<< 17;
	out2 = (rxbuf[1] + (rxbuf[2] >> 6 << 8)) << 17;
	//size = bytes[2] & 0x0f
	chThdSleepMilliseconds(1);
}]]></sText>
         </text>
